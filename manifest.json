{
  "manifest_version": 3,
  "name": "Library Jobs Sidebar",
  "version": "1.0",
  "description": "Display Library Jobs Hub website in a sidebar",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": "icon.png",
    "default_title": "Open Library Jobs Sidebar"
  },
  "icons": {
    "48": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "css": ["styles.css"],
      "js": ["content.js"]
    }
  ]
}